<div class="container">
  <div class="row">
    <h1> Trivia Compass</h1>
  </div>

  <div class = "row">
    <h2> Tonights Trivia</h2>
  </div>
  <% @tonights_bars.each do |bar|%>
      <div class="row">
        <div class="col-md-4">
          <%= bar.trivia_time %>
        </div>
        <div class="col-md-4">
          <%= bar.name %>
