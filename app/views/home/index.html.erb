<div class="container" ng-controller = "HomeController" ng-cloak>

  <!-- pre-populated bar list data -->
  <%= content_tag "div", id: "bar-data", data: {bars: @bars } do %>
  <% end %>

  <!-- pre-populated bar by day data -->
  <%= content_tag "div", id: "bar-day-data", data: {days: @bars_by_day } do %>
  <% end %>

  <!-- pre-populated bar list data -->
  <%= content_tag "div", id: "location-data", data: {location: @location } do %>
  <% end %>


  <!-- location-->
  <div class="row">
    <div class="col-md-12">
      <h2>{{location}} </h2>
    </div>
  </div>


  <!-- map -->
  <div id="map" style="width: 1000px; height: 600px;"></div>



  <h1>Weekly Schedule</h1>

  <weekly-schedule bars = "dayList"></weekly-schedule>


</div>
