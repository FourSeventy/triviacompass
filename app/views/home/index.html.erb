<div ng-controller="HomeController" ng-cloak>


  <!-- pre-populated bar and location data -->
  <%= content_tag "div", id: "default-data", data:  {preloaded: @default_data} do %>
  <% end %>


  <!-- location-->
  <div id="search-header">
    <div class="container">
      <div class= "row">
        <h1 class="twelve columns">Trivia Compass</h1>
      </div>

      <div class="row" >
        <div class="eight columns offset-by-two">
          <p class="play-copy-1">Feel like playing some trivia?</p>
          <p class="play-copy-2">Enter your location below to find bar trivia closest to you.</p>
        </div>
      </div>

      <div class="row" id="input-block">
        <div class="six columns offset-by-two">
          <input id="autocomplete" placeholder="Where are you?" type="text"/> <!-- onFocus="geolocate()" -->
        </div>
        <div class="two columns">
          <button ng-click="findClick()">Find a Bar</button>
        </div>
      </div>

    </div>
  </div>

  <div class="container">
    <div class= "row">
        <h2 class="twelve columns">{{location.name}}</h2>
      </div>
    </div>

  <!-- map -->
  <div class="container">
    <div class="row">
      <div class="twelve columns" id="map"></div>
    </div>
  </div>

  <!-- weekly schedule -->
  <weekly-schedule bars="barList"></weekly-schedule>


</div>
