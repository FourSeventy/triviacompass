<div class="admin container">


  <div class="row">
    <h1 class="col-md-12" >Admin Panel</h1>
  </div>


  <div class="row ">
    <h2 class="col-md-8">Bar Listing</h2>
    <a class="btn btn-primary col-md-1 col-md-push-2" href="/admin/newBar"> New Bar</a>
  </div>



  <div class="row">
    <div class="col-md-12">
    <table class="table table-striped table-bordered table-hover">

      <tr>
        <th>id</th>
        <th>Name</th>
        <th>Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Trivia Time</th>
        <th>Trivia Day</th>
      </tr>

      <% @all_bars.each do |bar| %>

          <tr>

            <td>
              <%= bar.id %>
            </td>
            <td>
              <%= bar.name %>
            </td>
            <td>
              <%= bar.address %>
            </td>
            <td>
              <%= bar.city %>
            </td>
            <td>
              <%= bar.state %>
            </td>
            <td>
              <%= bar.zip %>
            </td>
            <td>
              <%= bar.trivia_time %>
            </td>
            <td>
              <%= bar.trivia_day %>
            </td>
          </tr>



      <%end%>

    </table>
    </div>
  </div>

</div>
