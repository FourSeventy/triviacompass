<h1> New Bar</h1>

<%= form_tag '/admin/newBar/', method: 'post'  do %>

    <%= label_tag :name, 'Name' %>
    <%= text_field_tag :name %>

    <%= label_tag :address, 'Address' %>
    <%= text_field_tag :address %>

    <%= label_tag :city, 'City' %>
    <%= text_field_tag :city %>

    <%= label_tag :state, 'State' %>
    <%= text_field_tag :state %>

    <%= label_tag :zip, 'Zip' %>
    <%= text_field_tag :zip %>

    <%= label_tag :time, 'Trivia Time' %>
    <%= time_field_tag :time  %>

    <%= label_tag :day, 'Trivia Day' %>
    <%= text_field_tag :day %>


    <%= submit_tag 'Create' %>
<%end%>